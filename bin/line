#!/usr/bin/env bash
#
# Script Name: line
# Original source: https://codeberg.org/EvanHahn/dotfiles
# Date: 2025-10-23
#
# `$ line <N> <filename>` reads the Nth line of <filename>, if provided, or
# from STDIN.

set -e
set -u
set -o pipefail

function usage {
  echo "usage: line TODO" >&2
  exit 1
}

# Reads from STDIN if $2 not provided.
head -n "$1" "${2:-/dev/stdin}" | tail -n 1
